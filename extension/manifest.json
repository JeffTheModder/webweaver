{
    "manifest_version": 2,
    "name": "WebWeaver Extension",
    "version": "1.0.0",
    "description": "Inject custom code into web pages.",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        "popup.html",
        "popup.css",
        "popup.js"
    ]
}